<Window x:Class="videotek.Frames.Common.Ajout"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:videotek.Frames.Common"
        xmlns:viewmodels="clr-namespace:videotek.ViewModels"
        mc:Ignorable="d"
        Title="Ajout" Height="700" Width="800">
    <Window.DataContext>
        <viewmodels:SaisieViewModel x:Name="SaisieViewWindow"/>
    </Window.DataContext>
 
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="160"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Column="0" Grid.Row="0" Orientation="Vertical" VerticalAlignment="Center" Width="160">
            <TextBlock Margin="0,50,0,20" TextAlignment="Right" Text="Titre : "/>
            <TextBlock Style="{StaticResource texteBlockAlignDroite}" Text="Description : "/>
            <TextBlock Style="{StaticResource texteBlockAlignDroite}" Text="Date de sortie : "/>
            <TextBlock Style="{StaticResource texteBlockAlignDroite}" Text="Durée : "/>
            <TextBlock Style="{StaticResource texteBlockAlignDroite}" Text="Vu : "/>
            <TextBlock Style="{StaticResource texteBlockAlignDroite}" Text="Note : "/>
            <TextBlock Style="{StaticResource texteBlockAlignDroite}" Text="Commentaire : "/>
            <TextBlock Style="{StaticResource texteBlockAlignDroite}" Text="Type : "/>
            <TextBlock Style="{StaticResource texteBlockAlignDroite}" Text="Age minimum : "/>
            <TextBlock Style="{StaticResource texteBlockAlignDroite}" Text="Support Physique : "/>
            <TextBlock Style="{StaticResource texteBlockAlignDroite}" Text="Support numérique : "/>
            <TextBlock Style="{StaticResource texteBlockAlignDroite}" Text="Image : "/>
            <TextBlock Style="{StaticResource texteBlockAlignDroite}" Text="Langue VO : "/>
            <TextBlock Style="{StaticResource texteBlockAlignDroite}" Text="Langue : "/>
            <TextBlock Style="{StaticResource texteBlockAlignDroite}" Text="Sous titres : " />
        </StackPanel>
        <StackPanel Grid.Column="1" Grid.Row="0" Orientation="Vertical" VerticalAlignment="Center" Width="500">
            <TextBox Height="16" Margin="0,50,0,20" TextAlignment="Left" Text="{Binding Titre}"/>
            <TextBox Height="16" Margin="0,0,0,16" TextAlignment="Left" Text="{Binding Description}"/>
            <DatePicker Height="24" Margin="0,0,0,16" SelectedDate="{Binding Annee}"/>
            <TextBox Height="16" Margin="0,0,0,20" TextAlignment="Left" Text="{Binding Duree}"/>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                <RadioButton GroupName="Vu" Content="Oui" IsChecked="{Binding Vu}"></RadioButton>
                <RadioButton Margin="20,0,0,0" GroupName="Vu" Content="Non"></RadioButton>
            </StackPanel>
            <TextBox Height="16" Margin="0,0,0,20" TextAlignment="Left" Text="{Binding Note}" PreviewTextInput="Note_PreviewTextInput"/>
            <TextBox Height="16" Margin="0,0,0,20" TextAlignment="Left" Text="{Binding Commentaire}"/>
            <ComboBox ItemsSource="{Binding Source={StaticResource enmTypeMedia}}" Height="16" Margin="0,0,0,20" Name="type" />
            <TextBox Height="16" Margin="0,0,0,20" TextAlignment="Left" Text="{Binding AgeMini}"  PreviewTextInput="AgeMini_PreviewTextInput"/>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                <RadioButton GroupName="SP" IsChecked="{Binding SupportPhysique}" Content="Oui"></RadioButton>
                <RadioButton Margin="20,0,0,0" GroupName="SP" Content="Non"></RadioButton>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                <RadioButton GroupName="SN" Content="Oui" IsChecked="{Binding SupportNumerique}"></RadioButton>
                <RadioButton Margin="20,0,0,0"  GroupName="SN" Content="Non" ></RadioButton>
            </StackPanel><TextBox Height="16" Margin="0,0,0,20" TextAlignment="Left" Text=""/>
            <ComboBox ItemsSource="{Binding Source={StaticResource enmLangue}}" Height="16" Margin="0,0,0,20" Text="{Binding LangueVo}"/>
            <ComboBox ItemsSource="{Binding Source={StaticResource enmLangue}}" Height="16" Margin="0,0,0,20" Text="{Binding LangueMedia}"/>
            <ComboBox ItemsSource="{Binding Source={StaticResource enmLangue}}" Height="16" Margin="0,0,0,20" Text="{Binding LangueSousTitre}" />
        </StackPanel>
        <StackPanel Grid.Column="1" Grid.Row="1" Orientation="Vertical" VerticalAlignment="Center" Width="500">
            <Button Height="30" Width="150" HorizontalAlignment="Left" Content="Valider" Command="{Binding AjoutSaisie}"/>
        </StackPanel>

        <StackPanel Grid.Column="1" Grid.Row="1" Orientation="Vertical" VerticalAlignment="Center" Width="500">
            <Button Height="30" Width="150" HorizontalAlignment="Right" Content="Annuler" Command="{Binding Annuler}"/>
        </StackPanel>

    </Grid>
</Window>
