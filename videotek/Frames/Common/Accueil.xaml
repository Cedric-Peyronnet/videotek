<Page x:Class="videotek.Frames.Common.Accueil"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:videotek.Frames.Common"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Accueil">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="160"/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>
        <TextBlock Text="Accueil" />
        <StackPanel Grid.Column="0" Orientation="Vertical" VerticalAlignment="Center" Width="160">
            <TextBlock Margin="0,0,0,10" TextAlignment="Right" Text="Nombre de séries enregistrés :"> </TextBlock>
            <TextBlock Margin="0,0,0,10" TextAlignment="Right" Text="Nombre de films enregistrés :"></TextBlock>
            <TextBlock Margin="0,0,0,10" TextAlignment="Right" Text="Nombre de séries à voir :"></TextBlock>
            <TextBlock Margin="0,0,0,10" TextAlignment="Right" Text="Nombre de films à voir :"></TextBlock>
            <TextBlock Margin="0,0,0,10" TextAlignment="Right" Text="Derniers épisodes à voir :"></TextBlock>
        </StackPanel>
        <StackPanel Grid.Column="1" Orientation="Vertical" VerticalAlignment="Center" Width="20">
            <TextBlock Margin="0,0,0,10" TextAlignment="Left" Text="0"></TextBlock>
            <TextBlock Margin="0,0,0,10" TextAlignment="Left" Text="0"></TextBlock>
            <TextBlock Margin="0,0,0,10" TextAlignment="Left" Text="0"></TextBlock>
            <TextBlock Margin="0,0,0,10" TextAlignment="Left" Text="0"></TextBlock>
            <TextBlock Margin="0,0,0,10" TextAlignment="Left" Text="0"></TextBlock>
        </StackPanel>

    </Grid>
</Page>
