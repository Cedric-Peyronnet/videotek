<Page x:Class="videotek.Frames.Films.FilmMain"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:videotek.Frames.Films"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="FilmMain">

    <Grid>
        <TextBlock Text="Consultation des films" />
        <ListView Margin="0,20,0,0">
            
        </ListView>
        <ListView Height="124" HorizontalAlignment="Left" Margin="0,20,0,0" Name="test" VerticalAlignment="Top" Width="Auto" ItemsSource="{Binding Path=FilmList}">
            <ListView.View>
                <GridView  >
                    <GridViewColumn Width="100" Header="Titre" DisplayMemberBinding="{Binding Titre}"/>
                    <GridViewColumn Width="100" Header="Duree" DisplayMemberBinding="{Binding Duree}"/>
                    <GridViewColumn Width="100" Header="Date de sortie" DisplayMemberBinding="{Binding DateSortie}"/>
                    <GridViewColumn Width="100" Header="Titre" DisplayMemberBinding="{Binding Titre}"/>
                   
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Page>
