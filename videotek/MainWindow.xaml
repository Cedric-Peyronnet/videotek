<Window x:Class="videotek.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:videotek"
        mc:Ignorable="d"
        Title="MainWindow" Height="550" Width="800">
    <Grid>
        <StackPanel Orientation="Horizontal" Height="35" VerticalAlignment="Top">
            <Button x:Name="btnAccueil" Content ="Accueil" Click="btnClickAccueil"/>
            <Button Content="Page Film"  Margin="10,0,0,0" Click="btnClickFilm"/>
            <Button Content="Page Serie" Margin="10,0,0,0" Click="btnClickSerie"/>
        </StackPanel>
        <Frame x:Name="Main" Margin="0,35, 150,0"/>
        <Frame x:Name="Menu" Margin="650,35, 0,0"/>
    </Grid>
</Window>
